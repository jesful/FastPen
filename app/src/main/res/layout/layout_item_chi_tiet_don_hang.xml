<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_HinhSanPham"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_icon" />

        <TextView
            android:id="@+id/txt_TenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_HinhSanPham"
            android:layout_marginStart="8dp"
            android:text="Ten san pham"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_SoLuongSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_TenSanPham"
            android:layout_toEndOf="@+id/img_HinhSanPham"
            android:layout_marginStart="8dp"
            android:text="SoLuong:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_GiaSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_SoLuongSanPham"
            android:layout_toEndOf="@+id/img_HinhSanPham"
            android:layout_marginStart="8dp"
            android:text="Gia: 123.000 VND"
            android:textColor="@color/alizarin"
            android:textSize="20sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>