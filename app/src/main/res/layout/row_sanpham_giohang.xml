<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_cell_sanphamtronggio"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/imgView_HinhAnhSanPham_GioHang"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_TenSanPham_GioHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtView_GiaTien_GioHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá Tiền"
                android:maxWidth="250dp"
                android:textSize="24sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_vi_tien"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imgView_GiamSoLuongSanPham_GioHang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_remove_24"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:background="@drawable/border_soluongsanpham_giohang"/>

            <TextView
                android:id="@+id/txtView_SoLuongSanPham_GioHang"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:text="1"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/border_soluongsanpham_giohang"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgView_TangSoLuongSanPham_GioHang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_gravity="center"
                android:background="@drawable/border_soluongsanpham_giohang"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>