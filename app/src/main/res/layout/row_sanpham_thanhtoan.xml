<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_cell_sanphamtronggio"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgView_HinhAnhSanPham_ThanhToan"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ProgressBar
            android:id="@+id/progressBar_HinhAnhSanPham_ThanhToan"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_TenSanPham_ThanhToan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SL: x"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/txtView_SoLuongSanPham_ThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtView_GiaTien_ThanhToan"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Giá Tiền"
                android:textSize="24sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_vi_tien"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingLeft="6dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>